{
    "name": "elementroute/elementroute-sdk-php",
    "description": "PHP SDK for elementROUTE API",
    "type": "library",
    "licence": "MIT",
    "authors": [
        {
            "name": "Leo Oberle",
            "email": "leocello@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "pestphp/pest": "^2.36",
        "laravel/pint": "^1.20",
        "vlucas/phpdotenv": "^5.6",
        "symfony/var-dumper": "^6.4"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "ElementRoute\\ElementRouteSdkPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ElementRoute\\ElementRouteSdkPhp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "pint",
        "test": "pest"
    }
}
